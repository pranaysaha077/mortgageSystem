@model IEnumerable<MortgageSystem.Models.Mortgage>

@{
    ViewBag.Title = "ViewMortgage";
    Layout = "~/Views/Shared/Loan_layout.cshtml";
}

<h2>View Mortgage</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MortgageItem)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.MortgageValue)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.MortgageInterest)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UpdatedDate)
        </th>
      
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MortgageItem)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.MortgageValue)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.MortgageInterest)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UpdatedDate)
        </td>
       
    </tr>
}

</table>
