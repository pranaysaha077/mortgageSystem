@model IEnumerable<MortgageSystem.Models.Mortgage>

@{
    ViewBag.Title = "MortgageInfo";
    Layout = "~/Views/Shared/Customer_layout.cshtml";
}

<h2>MortgageInfo</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MortgageItem)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.MortgageValue)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ValueType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MortgageInterest)
        </th>
      
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MortgageItem)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.MortgageValue)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ValueType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MortgageInterest)
        </td>
       
    </tr>
}

</table>
<div>
    <button type="button" class="btn btn-default">@Html.ActionLink("Terms & Conditions","Terms","Customer")</button>
</div>